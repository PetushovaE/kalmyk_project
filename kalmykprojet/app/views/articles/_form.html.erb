<%= form_for(article) do |f| %>


  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, id: "title" %>
  </div>

  <div class="field">
    <%= f.label :body %>
    <%= f.text_field :body, id: "body" %>
  </div>


  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>
  <% end %>
